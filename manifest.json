{
    "manifest_version": 3,
    "name": "autolicious",
    "version": "0.1",
    "action": {
        "default_icon": "icon2.png",
        "default_popup": "index.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "https://*/*",
        "http://*/*"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "view.html"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}