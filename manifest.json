{
    "manifest_version": 3,
    "name": "autolicious",
    "version": "0.1",
    "description": "Automatic cataloging of bookmarks using ChatGPT & OpenAI API",
    "action": {
        "default_icon": "icon2.png",
        "default_popup": "index.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "tabs"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "view.html",
                "view.js",
                "loading.css",
                "tachyons.min.css"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}